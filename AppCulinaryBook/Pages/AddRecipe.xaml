<Page x:Class="AppCulinaryBook.Pages.AddRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppCulinaryBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="AddRecipe">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Pages/фон кул книга.jpg" Stretch="UniformToFill" Opacity="0.35"/>
        </Grid.Background>
        <TextBlock Text="Добавление рецепта" Width="350" Height="40" Margin="0, 0, 0, 480" TextAlignment="Center" FontSize="30" FontWeight="Black"></TextBlock>
        <TextBlock Width="200" Height="30" Margin="-130, 0, 0, 400" Text="Название рецепта" FontSize="17" FontWeight="DemiBold"></TextBlock>
        <TextBox Width="330" Height="30"  Margin="0, 0, 0, 340" Text="{Binding RecipeName}"/>
        <TextBlock Width="200" Height="30" Margin="0, 0, 130, 250" Text="Описание рецепта" FontSize="17" FontWeight="DemiBold"></TextBlock>
        <TextBox Width="330" Height="100" Name="Descript" Margin="0, 0, 0, 120" Text="{Binding Description}"/>
        <TextBlock Width="150" Height="30" Margin="0, 30, 180, 0" TextAlignment="Center" Text="Категория рецепта" FontSize="17" FontWeight="DemiBold"></TextBlock>
        <TextBlock Width="150" Height="30" Margin="180, 30, 0, 0" TextAlignment="Center" Text="Автор" FontSize="17" FontWeight="DemiBold"></TextBlock>
        <ComboBox Width="150" Height="30" Margin="0, 90, 180, 0" x:Name="cmbCategory" SelectedIndex="{Binding CategoryID}"></ComboBox>
        <ComboBox Width="150" Height="30" Margin="180, 90, 0, 0" x:Name="cmbAuthor" SelectedIndex="{Binding AuthorID}"></ComboBox>
        <TextBlock Width="180" Height="30" Margin="0, 230, 140, 0" Text="Загрузить изображение:" TextWrapping="Wrap" FontSize="15"/>
        <GroupBox Width="100" Height="70" Margin="200, 250, 0, 0" Padding="0, 5, 0, 0" Background="White">
            <Image Source="/images/uploadImage.png" Opacity="0.3" Name="UploadedPhoto"/>
        </GroupBox>
        <Button Width="150" Height="25" Margin="0, 280, 170, 0" Content="Загрузить"></Button>
        <Button Width="150" Height="30" Margin="0, 400, 170, 0" Content="Сохранить" Click="Button_Click"></Button>
        <Button Width="150" Height="30" Margin="170, 400, 0, 0" Content="Отмена" Click="Button_Click_1"></Button>
    </Grid>
</Page>
